{
    "name": "8ctopus/pigeon-invoice",
    "type": "library",
    "description": "Create pdf and html invoices using the Twig template engine",
    "keywords": ["invoice", "pdf", "html"],
    "license": "MIT",
    "authors": [
        {
            "name": "8ctopus",
            "email": "hello@octopuslabs.io"
        }
    ],
    "require": {
        "php": ">=8",
        "twig/twig": "^3.0",
        "dompdf/dompdf": "^1.2",
        "twig/intl-extra": "^3.3"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.8",
        "nunomaduro/collision": "^6.2",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Oct8pus\\Invoice\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Oct8pus\\Extend\\": "extend"
        }
    }
}
